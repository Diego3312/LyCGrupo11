/* if sin else */
selection ::=
    if_head:h
    OPEN_CURLY_BRACKET
    block
    CLOSE_CURLY_BRACKET
      {:
         // falsos → salida del if
         IntermediateCodeGenerator.completarSaltos(h.listaFalsos, Terceto.getSiguiente());
      :}
    %prec IFX
;

/* if con else */
selection ::=
    if_head:h
    OPEN_CURLY_BRACKET
    block
    CLOSE_CURLY_BRACKET
      {:
         // salto para salir del THEN
         intermediateCodeGenerator.getListaTercetos().add(new Terceto("JMP","-","-"));
         pilaTercetoIf.push(Terceto.getSiguiente() - 1);

         // falsos de la condición → inicio del ELSE
         IntermediateCodeGenerator.completarSaltos(h.listaFalsos, Terceto.getSiguiente());
      :}
    ELSE
    OPEN_CURLY_BRACKET
    block
    CLOSE_CURLY_BRACKET
      {:
         // completar el salto que sale del THEN
         Integer idx = pilaTercetoIf.pop();
         java.util.ArrayList<Integer> out = new java.util.ArrayList<>();
         out.add(idx);
         IntermediateCodeGenerator.completarSaltos(out, Terceto.getSiguiente());
      :}
;

if_head ::=
    IF OPEN_BRACKET condition:c CLOSE_BRACKET
      {:
         // Completa los verdaderos (p. ej., JMPs del OR) al entrar al THEN
         IntermediateCodeGenerator.completarSaltos(c.listaVerdaderos, Terceto.getSiguiente());
         RESULT = c; // pasamos la info de la condición
      :}
;




