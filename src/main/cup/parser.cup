//AGREGADO POR MI
condition ::= or_condition:o {:RESULT = o;:};

or_condition ::= and_condition:a {:RESULT = a;:};
or_condition ::= or_condition:o
      {:
        // 1) Si A es verdadero, no quiero evaluar B → emito salto al THEN
        intermediateCodeGenerator.getListaTercetos().add(new Terceto("JMP","-","-"));
        int idxJmp = Terceto.getSiguiente() - 1;

        // 2) Short-circuit: falsos de A → inicio de B
        int inicioB = Terceto.getSiguiente();
        IntermediateCodeGenerator.completarSaltos(o.listaFalsos, inicioB);

        // 3) Guardo lo que traigo de A en un tmp parcial
        ListasCaminosTrueFalse tmp = new ListasCaminosTrueFalse();
        tmp.listaVerdaderos.addAll(o.listaVerdaderos);
        tmp.listaVerdaderos.add(idxJmp); // el JMP recién emitido se suma a Verdaderos de A
        // Ojo: NO seteamos falsos aún; se definirán con los falsos de B
        RESULT = tmp;
      :}
    OR and_condition:b
      {:
        // 4) Combinar con B: Verdaderos = A.V ∪ B.V ; Falsos = B.F
        ListasCaminosTrueFalse prev = (ListasCaminosTrueFalse) RESULT;
        ListasCaminosTrueFalse l = new ListasCaminosTrueFalse();

        l.listaVerdaderos.addAll(prev.listaVerdaderos);
        l.listaVerdaderos.addAll(b.listaVerdaderos);

        l.listaFalsos.addAll(b.listaFalsos);

        RESULT = l;
      :}
  ;


